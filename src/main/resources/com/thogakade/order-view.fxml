<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.thogakade.controller.OrderController">
    <VBox spacing="10.0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>

        <!-- Order Form -->
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
            <children>
                <Label text="Order Information" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Row 1 -->
                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Order ID:" />
                                <TextField fx:id="txtOrderId" promptText="Enter Order ID" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Order Date:" />
                                <DatePicker fx:id="dpOrderDate" promptText="Select Date" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Customer ID:" />
                                <ComboBox fx:id="cmbCustomerId" promptText="Select Customer" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Total:" />
                                <TextField fx:id="txtOrderTotal" promptText="Total" editable="false" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addOrder" prefWidth="100.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add" />
                        <Button mnemonicParsing="false" onAction="#updateOrder" prefWidth="100.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Update" />
                        <Button mnemonicParsing="false" onAction="#deleteOrder" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
                        <Button mnemonicParsing="false" onAction="#clearFields" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Clear" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Order Table -->
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <Label text="Order List" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TableView fx:id="tblOrders" prefHeight="300.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colOrderId" prefWidth="100.0" text="Order ID" />
                        <TableColumn fx:id="colOrderDate" prefWidth="100.0" text="Date" />
                        <TableColumn fx:id="colCustomerId" prefWidth="100.0" text="Customer ID" />
                        <TableColumn fx:id="colOrderTotal" prefWidth="100.0" text="Total" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </VBox>
</AnchorPane>