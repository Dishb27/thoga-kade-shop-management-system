<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.thogakade.controller.OrderDetailController">
    <VBox spacing="10.0" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>

        <!-- Order Detail Form -->
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15;">
            <children>
                <Label text="Order Detail Information" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Row 1 -->
                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Order ID:" />
                                <TextField fx:id="txtOrderId" promptText="Order ID" editable="false" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Item Code:" />
                                <ComboBox fx:id="cmbItemCode" promptText="Select Item" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Quantity:" />
                                <TextField fx:id="txtQty" promptText="Enter Quantity" onKeyReleased="#calculateTotal" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Row 2 -->
                <HBox spacing="15.0">
                    <children>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Unit Price:" />
                                <TextField fx:id="txtUnitPrice" promptText="Unit Price" onKeyReleased="#calculateTotal" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Discount (%):" />
                                <TextField fx:id="txtDiscount" promptText="Enter Discount" text="0" onKeyReleased="#calculateTotal" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Label text="Total:" />
                                <TextField fx:id="txtTotal" promptText="Total" editable="false" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#addOrderDetail" prefWidth="100.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add" />
                        <Button mnemonicParsing="false" onAction="#updateOrderDetail" prefWidth="100.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Update" />
                        <Button mnemonicParsing="false" onAction="#deleteOrderDetail" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
                        <Button mnemonicParsing="false" onAction="#clearFields" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Clear" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Order Detail Table -->
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <Label text="Order Detail List" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TableView fx:id="tblOrderDetails" prefHeight="300.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colOrderId" prefWidth="100.0" text="Order ID" />
                        <TableColumn fx:id="colItemCode" prefWidth="100.0" text="Item Code" />
                        <TableColumn fx:id="colQty" prefWidth="80.0" text="Quantity" />
                        <TableColumn fx:id="colUnitPrice" prefWidth="100.0" text="Unit Price" />
                        <TableColumn fx:id="colDiscount" prefWidth="80.0" text="Discount (%)" />
                        <TableColumn fx:id="colDetailTotal" prefWidth="100.0" text="Total" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </VBox>
</AnchorPane>